@model QLSV.Entities.Models.TaiKhoan

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Đăng nhập</title>


    <link href="~/Content/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet"/>
    <link href="~/Content/css/login.css" rel="stylesheet"/>
    <meta charset="utf-8"/>
</head>
<body>
<div class="login-page">
    <div class="form">
        <form method="post">
            <h1>Đăng nhập hệ thống</h1>
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new
            {
                style = "color:red"
            })
            @Html.TextBoxFor(x => x.TenDangNhap, new {placeholder = "Tên đăng nhập"})
            @Html.ValidationMessageFor(x => x.TenDangNhap, null, new {style = "color:red;font-size:12px;margin-top: -5px"})
            @Html.PasswordFor(x => x.MatKhau, new {placeholder = "Mật khẩu"})
            @Html.ValidationMessageFor(x => x.MatKhau, null, new {style = "color:red;font-size:12px;margin-top: -5px"})
            <input type="submit" name="commit" value="Đăng nhập">
        </form>
    </div>
</div>

<div class="modal fade" tabindex="-1" role="dialog" id="myModal">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Thông báo</h4>
            </div>
            <div class="modal-body" style="text-align: center">
                <p>@TempData["Error"]</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">OK</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<script src="~/Content/lib/jquery/dist/jquery.min.js"></script>
<script src="~/Content/lib/bootstrap/dist/js/bootstrap.min.js"></script>
@if (TempData["Error"] != null)
{
    <script>
        $('document')
            .ready(function() {
                $('#myModal').modal("show");
            });
    </script>
}
</body>

</html>



